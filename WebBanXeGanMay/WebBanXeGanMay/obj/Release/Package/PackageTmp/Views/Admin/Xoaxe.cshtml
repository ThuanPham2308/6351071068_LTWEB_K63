@model WebBanXeGanMay.Models.XEGANMAY

@{
    ViewBag.Title = "Xoaxe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN XE CẦN XÓA</h2>

<h3>Bạn quyết định xóa xe này ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Tên sách:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenXe)
        </dd>

        <dt>
            Giá bán:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.Giaban) VNĐ
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mota)
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img style="width: 100px" src="@Url.Content("~/" + Model.Anhbia)" />
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat)
        </dd>

        <dt>
            Số lượng tồn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
            Loại xe:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAIXE.TenLoaiXe)
        </dd>

        <dt>
            Nhà phân phối:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHAPHANPHOI.TenNPP)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("TRỞ VỀ", "Xe")
        </div>
    }
</div>
