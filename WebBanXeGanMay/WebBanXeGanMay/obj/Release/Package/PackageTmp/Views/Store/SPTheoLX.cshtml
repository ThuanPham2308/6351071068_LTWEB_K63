@using WebBanXeGanMay.Models
@using PagedList.Mvc;
@model PagedList.PagedList<XEGANMAY>
@{
    ViewBag.Title = "SPTheoLX";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="danhsachxe">
    @foreach (var item in Model)
    {
        <div>
            <a href="#">
                <img width="100" height="100" src="@Url.Content($"~/{@item.Anhbia}")" alt="Motocycle Image" />
            </a>
            <p class="tenxe"><a href="@Url.Action("Details","Store", new {id = item.MaXe})">@item.TenXe</a></p>
        </div>
    }
</div>
<div>
    <div class="PhanTrang">
        Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("SPTheoLX", new { page = page }))
    </div>
</div>