
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<article>
    <section>
        <form action="#" method="post" name="dangky" onSubmit="kiemtrathongtin()">
            <div id="dktv">
                <p>ĐĂNG KÝ THÀNH VIÊN</p>
            </div>
            <div id="dangky">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <fieldset id="thongtincn">
                        <legend><b>Thông tin cá nhân</b></legend>
                        <table width="700" cellpadding="0" border="0" cellspacing="2">
                            <tr>
                                <td>Họ và tên:</td>
                                <td>
                                    @Html.TextBox("HotenKH")
                                    @ViewData["Loi1"]
                                </td>
                            </tr>
                            <tr>
                                <td> Email:</td>
                                <td>
                                    @Html.TextBox("Email")
                                    @ViewData["Loi5"]
                                </td>
                            </tr>
                            <tr>
                                <td> Số điện thoại:</td>
                                <td>
                                    @Html.TextBox("SDT")
                                    @ViewData["Loi6"]
                                </td>
                            </tr>
                            <tr>
                                <td> Địa chỉ:</td>
                                <td>
                                    @Html.TextBox("DiaChi")
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Ngày sinh:
                                </td>
                                <td>
                                    <input type="date" name="Ngaysinh">
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                    <fieldset id="thongtindn">
                        <legend><b>Thông tin đăng nhập</b></legend>
                        <table width="700" border="0" cellspacing="2">
                            <tr>
                                <td>Tên đăng nhập:</td>
                                <td>
                                    @Html.TextBox("TenDN")
                                    @ViewData["Loi2"]
                                </td>
                            </tr>
                            <tr>
                                <td>Mật khẩu:</td>
                                <td>
                                    @Html.Password("MatKhau")
                                    @ViewData["Loi3"]
                                </td>
                            </tr>
                            <tr>
                                <td> Xác nhận mật khẩu:</td>
                                <td>
                                    @Html.Password("XacNhanMatKhau")
                                    @ViewData["Loi4"]
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                    <div align="center">
                        <input type="submit" onClick="return kiemta()" value="Đăng ký">
                        <input type="reset" value="Hủy">
                    </div>
                }

            </div>
        </form>

    </section>
</article>
