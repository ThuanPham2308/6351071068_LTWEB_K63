
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<article>
    <section>
        <form action="#" method="post" name="dangky" onSubmit="kiemtrathongtin()">
            <div id="dktv">
                <p>@ViewBag.Thongbao</p>
            </div>
            <div id="dangky">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)      
                <fieldset id="thongtindn">
                    <legend><b>Đăng nhập</b></legend>
                    <table width="700" border="0" cellspacing="2">
                        <tr>
                            <td>Tên đăng nhập:</td>
                            <td>
                                @Html.TextBox("TenDN")
                                @ViewData["Loi1"]
                            </td>
                        </tr>
                        <tr>
                            <td>Mật khẩu:</td>
                            <td>
                                @Html.Password("MatKhau")
                                @ViewData["Loi2"]
                            </td>
                        </tr>
                    </table>
                    <br />
                    <div align="center">
                        <input type="submit" value="Đăng nhập" />
                    </div>
                </fieldset> 
                }

            </div>
        </form>

    </section>
</article>

